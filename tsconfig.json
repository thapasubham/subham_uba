{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "./",

    "noImplicitAny": true,
    "strictNullChecks": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
